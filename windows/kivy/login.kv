<Login>
    name: 'Login'

    MDFloatLayout:

        MDLabel:
            text: 'LOGIN'
            font_size: "20sp"
            bold: True
            halign: 'center'

            pos_hint: {"center_x": 0.5, "top": 0.85}
            size_hint_y: None
            height: self.texture_size[1] * 4

        MDTextField:
            id: email
            icon_left: 'email-outline'
            hint_text: 'your@email.com'
            helper_text_mode: "on_error"
            halign: 'left'

            size_hint_x: None
            width: root.width * 0.5
            pos_hint: {"center_x": 0.5, "top": 0.70}
        
        MDTextField:
            id: password
            icon_left: 'eye-off'
            hint_text: 'Password'
            password: True
            halign: 'left'

            size_hint_x: None
            width: root.width * 0.5
            pos_hint: {"center_x": 0.5, "top": 0.6}

            on_text_validate:
                root.login()

        MDRectangleFlatButton:
            id: icon1
            pos_hint: {"x": (root.width * 0.15) / root.width, "center_y": password.center_y / root.height}
            md_bg_color: 0, 0, 0, 0
            line_color: 0, 0, 0, 0
            ripple_scale: 0

            size_hint_x: None
            width: dp(25)
            size_hint_y: None
            height: password.height * 0.75

            on_release:
                root.password(self)
        
        MDLabel:
            id: info
            font_size: "15sp"

            pos_hint: {"center_x": 0.5, "top": 0.35}
            size_hint: 0.7, None
            height: self.texture_size[1]

        MDFillRoundFlatButton:
            text: 'Log in'

            size_hint_x: 0.5
            pos_hint: {'center_x': 0.5, "top": 0.45}

            on_release:
                root.login()

        MDLabel:
            
        MDLabel:
            text: "Or"
            font_size: "13sp"
            color: 0.1, 0.1, 0.1, 0.7
            halign: "center"

            size_hint_y: None
            height: self.texture_size[1] * 1.5
            pos_hint: {"center_x": 0.5, "top": 0.1}
        
        MDFlatButton:
            text: 'SIGN UP'
            bold: True

            size_hint_x: 0.6
            pos_hint: {"center_x": 0.5, "top": 0.07}

            on_release:
                root.manager.transition = NoTransition()
                app.root.current = 'RegisterUser'

        MDLabel: